<div class="mdl-layout mdl-js-layout">
  <header class="mdl-layout__header">
    <div class="mdl-layout-icon"></div>
    <div class="mdl-layout__header-row">
      <span class="mdl-layout__title">Minus's Test Site</span>
      <div class="mdl-layout-spacer"></div>
      <nav class="mdl-navigation">
        <a class="mdl-navigation__link" href="/">Home</a>
        
        <% if (isValidUser(user)) { %>
          <a href="/profile" class="mdl-navigation__link"><%= user.local.displayName %></a>
          <a 
            href="/profile" 
            class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect" 
            style="background: url('/u/<%=getImage(user)%>') center / cover;"
          ></a>
        <% } else { %>
          <a href="/signup" class="mdl-navigation__link">Signup</a>
          <a href="/login" class="mdl-navigation__link">Login</a>
        <% } %>
      </nav>
    </div>
  </header>
  <div class="mdl-layout__drawer">
    <span class="mdl-layout__title">Minus's Test Site</span>
    <nav class="mdl-navigation">
      <a class="mdl-navigation__link" href="/">Home</a>
      <% if (isValidUser(user)) { %>
        <a href="/profile" class="mdl-navigation__link">Your Profile</a>
      <% } else { %>
        <a href="/signup" class="mdl-navigation__link">Signup</a>
        <a href="/login" class="mdl-navigation__link">Login</a>
      <% } %>
    </nav>
  </div>
  <main class="mdl-layout__content">
    <div class="mdl-grid">
      <div class="mdl-cell mdl-cell--2-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
      <div class="cust-layout mdl-color--white mdl-shadow--4dp content mdl-color-text--grey-800 mdl-cell mdl-cell--8-col">
        <!--<div class="mdl-color-text--grey-500">Beep</div>-->
      
    
