<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Signup</title>
    <% include _css-files %>
</head>
<body>

    <%- include('titlebarStart', get()) %>

    <!-- LOGIN FORM -->

	<% if (!isValidUser(user)) { %>
		<div class="mdl-card__title mdl-color--primary mdl-color-text--white">
			<h2 class="mdl-card__title-text">Signup!</h2>
		</div>
		<div class="mdl-card__supporting-text">
		    <% if (message.length > 0) { %>
				<h3><%= message %></h3>
    		<% } %>
			<form action="/signup" method="post">
				<div class="mdl-textfield mdl-js-textfield">
				    <input class="mdl-textfield__input" name="username" type="text" id="username" />
				    <label class="mdl-textfield__label" for="username">Username</label>
				</div>
				<br />
				<div class="mdl-textfield mdl-js-textfield">
					<input class="mdl-textfield__input" name="password" type="password" id="userpass" />
					<label class="mdl-textfield__label" for="userpass">Password</label>
				</div>
				<br />
				<div class="mdl-textfield mdl-js-textfield">
					<input class="mdl-textfield__input" name="confirmPassword" type="password" id="userpassConfirm" />
					<label class="mdl-textfield__label" for="userpassConfirm">Confirm Password</label>
				</div>
				<div class="mdl-card__actions mdl-card--border">
                	<input
						type="submit"
                    	class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect"
						value="Signup"
                	>
				</div>
			</form>
		</div>
	<% } else { %>
		<h3>Sorry, but you have to <a href="/logout" class="mdl-button mdl-js-button mdl-js-ripple-effect">Logout</a> if you want to create another account.</h3>
	<% } %>
		    	
    <% include titlebarEnd %>
    <% include _js-files %>
</body>
</html>
